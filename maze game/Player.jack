class Player{
	field int x;
	field int y;

	constructor Player new(int xVal, int yVal){
		let x = xVal;
		let y = yVal;
		return this;
	}

	method int getX(){
		return x;
	}

	method int getY(){
		return y;
	}
	// up -1
	// down -2
	// right -4
	// left- 8

	method void go(int direction){

		if(direction = 8){
			let x = x - 1;
		}
		if(direction = 1){
			let y =  y - 1;
		}
		if(direction = 4){
			let x = x + 1;
		}
		if(direction = 2){
			let y = y + 1;
		}
		return;
	}

}